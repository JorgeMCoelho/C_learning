//14 Implemente um programa que receba um número inteiro do utilizador e verifique se ele é um múltiplo de 3 e 5 ao mesmo tempo.



#include <stdio.h>


int main() {

int num;

    printf("Vamos verificar se o número é múltiplo por 3 e 5.\n");
    printf("Por favor indica-me um número: ");
    scanf("%d", &num);
    if((num % 3 == 0) && (num % 5 == 0)) {
        printf("O número %d é um múltiplo de 3 e 5 ao mesmo tempo.\n", num);
    }else
    {
        printf("O número %d não é um múltiplo de 3 e 5 ao mesmo tempo.\n", num);
    }
    
    
    

return 0;
}
